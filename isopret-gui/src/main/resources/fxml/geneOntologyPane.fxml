<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<ScrollPane fx:id="geneOntologyPane" fitToHeight="true"
            fitToWidth="true"
            xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jax.isopret.gui.controller.GeneOntologyController">
    <StackPane alignment="TOP_CENTER">
        <VBox alignment="TOP_CENTER" maxWidth="1200.0" minHeight="600.0" minWidth="1105.0" prefWidth="1200.0">
            <VBox alignment="TOP_CENTER">
                <Label styleClass="toplabel" stylesheets="@../css/isopretstyle.css" text="Results summary" />
                <HBox fx:id="listviewHbox" alignment="TOP_CENTER" prefHeight="120.0" prefWidth="1105.0">
                    <ListView fx:id="lviewKey" minHeight="175.0" prefHeight="175.0" prefWidth="1159.0" />
                    <ListView fx:id="lviewValue" minHeight="175.0" prefHeight="170.0" prefWidth="905.0" />
                </HBox>
            </VBox>

            <TableView fx:id="goPvalTableView" stylesheets="@../css/isopretstyle.css" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="termColumn" editable="false" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" resizable="false" text="Symbol" />
                    <TableColumn fx:id="termIdColumn" editable="false" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" styleClass="mycolumntarget" text="Accession" />
                    <TableColumn fx:id="studyCountsColumn" editable="false" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" styleClass="mycolumn" text="Fold change" />
                    <TableColumn fx:id="studyPercentageColumn" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" styleClass="mycolumn" text="Probability" />
                    <TableColumn fx:id="populationCountsColumn" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" styleClass="mycolumn" text="sig./total isoforms" />
                    <TableColumn fx:id="populationPercentageColumn" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" styleClass="mycolumn" text="Splicing probability" />
                    <TableColumn fx:id="pvalColumn" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" text="Visualize" />
                    <TableColumn fx:id="adjpvalColumn" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" text="Visualize" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </StackPane>
</ScrollPane>

